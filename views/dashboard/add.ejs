<div class="container mx-auto pb-20 mb-20">

    <div class="row mb-16">
      <div class="col">
        <nav aria-label="breadcrumb">
          <ol class="flex flex-wrap space-x-2">
            <li>
              <a href="/dashboard" class="text-blue-500 hover:underline">Dashboard</a>
            </li>
            <li class="text-gray-500">/</li>
            <li class="text-gray-500">Add Note</li>
          </ol>
        </nav>
        
        <div class="flex justify-between items-center">
          <h1 class="text-3xl font-bold">Add Note</h1>
        </div>
      </div>
    </div>
  
  
    <form action="/dashboard/add" method="POST" class="relative">
      <div class="form-group mb-16 absolute left-0 top-0 right-0">
        <input type="text" class="form-control font-bold border-0 text-2xl w-full" id="title" name="title" placeholder="Title" required>
      </div>
  
      <div class="form-group mb-16">
        <textarea required class="form-control pt-20 text-2xl w-full" id="body" name="body" placeholder="Take a note..." rows="12"></textarea>
      </div>
  
      <div class="form-group">
        <button type="submit" class="btn btn-primary btn-lg bg-blue-500 text-white px-6 py-3 rounded-lg">+ Add Note</button>
      </div>
  
    </form>
  
</div>
